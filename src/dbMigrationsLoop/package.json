{
  "name": "dbmigrationsloop",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "esbuild index.ts --bundle --sourcemap --platform=node --target=es2020 --external:db-migrate --outfile=dist/index.js",
    "postbuild": "cd dist && cp ../../../database.json . && cp -r ../../../migrations . && cp -r ../node_modules/db-migrate ./node_modules && zip -r index.zip index.js* database.json migrations node_modules",
    "sls-deploy:prod": "node ../../node_modules/serverless/bin/serverless.js deploy --stage=prod --region=us-east-1",
    "sls-deploy:staging": "node ../../node_modules/serverless/bin/serverless.js deploy --stage=staging --region=eu-west-1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "db-migrate": "^0.11.14"
  }
}
