{
  "name": "api-serverless",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript template",
  "main": "serverless.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "NODE_ENV=local ACTIVATE_API_PASSWORD=false serverless offline",
    "build": "rm -rf dist && esbuild src/handler.ts --bundle --sourcemap --platform=node --target=es2020 --outfile=dist/index.js && mkdir dist/native_modules && cp -r node_modules/sharp dist/native_modules/sharp/",
    "postbuild": "cd dist && zip -r index.zip *"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mcache": "^0.4.0",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "serverless-http": "^3.1.1",
    "sharp": "^0.32.6",
    "zip": "^1.2.0"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.0.0",
    "@types/memory-cache": "^0.2.2",
    "@types/node": "^14.14.25",
    "esbuild": "^0.14.11",
    "serverless": "^3.27.0",
    "serverless-esbuild": "^1.23.3",
    "serverless-offline": "^12.0.4",
    "swagger-autogen": "^2.23.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
